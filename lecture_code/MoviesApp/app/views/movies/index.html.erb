<h1><%= @title %></h1>

<p><a href="/movies/new">Add a New Movie</a></p>

<table>
  <thead>
    <tr>
      <th>ID Number</th>
      <th>Title</th>
      <th>Director</th>
      <th>Year</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><a href='#'><%= movie[:id] %></a></td>
        <td><%= movie[:title] %></td>
        <td><%= movie[:director] %></td>
        <td><%= movie[:year] %></td>
        <td><a href="#">Delete</td>
      </tr>
    <% end %>
  </tbody>
</table>
